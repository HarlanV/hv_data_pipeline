{
  "Version": "2012-10-17",
  "Statement": [
    {
      "_comment":"",
      "Sid": "ListBucket",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::hv-challenge"
    },
    {
      "Sid": "AccessRawZone",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::hv-challenge/raw/*"
    },
    {
      "Sid": "AccessBronzeSilverGold",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::hv-challenge/bronze/*",
        "arn:aws:s3:::hv-challenge/silver/*",
        "arn:aws:s3:::hv-challenge/gold/*"
      ]
    }
  ]
}
