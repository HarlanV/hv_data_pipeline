{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ListBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::hv-challenge"
    },
    {
      "Sid": "ReadRawZone",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::hv-challenge/raw/*"
    },
    {
      "Sid": "WriteBronzeSilverGold",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::hv-challenge/bronze/*",
        "arn:aws:s3:::hv-challenge/silver/*",
        "arn:aws:s3:::hv-challenge/gold/*"
      ]
    }
  ]
}
